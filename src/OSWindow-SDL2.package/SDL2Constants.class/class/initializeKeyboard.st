class initialization
initializeKeyboard
    KMOD_NONE := 16r0000.
    KMOD_LSHIFT := 16r0001.
    KMOD_RSHIFT := 16r0002.
    KMOD_LCTRL := 16r0040.
    KMOD_RCTRL := 16r0080.
    KMOD_LALT := 16r0100.
    KMOD_RALT := 16r0200.
    KMOD_LGUI := 16r0400.
    KMOD_RGUI := 16r0800.
    KMOD_NUM := 16r1000.
    KMOD_CAPS := 16r2000.
    KMOD_MODE := 16r4000.
    KMOD_RESERVED := 16r8000.

	KMOD_CTRL  :=  (KMOD_LCTRL | KMOD_RCTRL).
	KMOD_SHIFT :=  (KMOD_LSHIFT | KMOD_RSHIFT).
	KMOD_ALT    := (KMOD_LALT | KMOD_RALT).
	KMOD_GUI    := (KMOD_LGUI | KMOD_RGUI).